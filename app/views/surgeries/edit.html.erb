<h1>Update Surgery</h1>

<%= form_for @surgery do |f| %>
    <%=f.label :doctor_id%>
    <%=f.collection_select :doctor_id, @doctors, :id, :name %>
    <%=f.label :nurse_id%>
    <%=f.collection_select :nurse_id, @nurses, :id, :name %>
    <%=f.label :patient_id%>
    <%=f.collection_select :patient_id, @patients, :id, :name %>
    <%=f.label :room_id%>
    <%=f.collection_select :room_id, @rooms, :id, :number %>
    <%=f.submit%>

    <%end%>


    