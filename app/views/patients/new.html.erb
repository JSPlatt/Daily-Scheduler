<h1>Add a New Patient</h1>

<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |message| %>
            <li>
                <%= message %>
            </li>
        <% end %>
    </ul>
<% end %>

<%=form_for @patient do |f| %>
    <%=f.label :name, "Patient name here" %>
    <%=f.text_field :name%>
    <%=f.label :need, "Surgery Required"%>
    <%=f.text_field :need%>
    <%=f.submit%>
<%end%>